<div class="page-title-area">
  <div class="row align-items-center">

    <% if current_user.nil? %>
      <div class="col-sm-12 clearfix">
        <div class="pull-right">
          <button class="btn btn-primary btn-sign-in" type="button">
            <%= link_to "Sign In", new_user_session_path %>
          </button>
        </div>
        <div class="pull-right">
          <button class="btn btn-danger btn-sign-up" type="button" >
            <%= link_to "Sign Up", new_user_registration_path %>
          </button>
        </div>
      </div>
    <% else %>
      <div class="col-sm-12 clearfix">
        <div class="pull-right">
          <div class="dropdown">
            <button class="btn btn-primary btn-profile" type="button" data-toggle="dropdown">
              <i class="fa fa-user"></i>
              <span class="caret"></span>
            </button>
            <div class="dropdown-menu dropdown-menu-right">
              <%#= link_to "Thông tin", admin_profile_path, class: "dropdown-item" %></br>
              <%= link_to "Đăng xuất", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        </div>
        <div class="pull-right">
          <% if current_user.is_admin? %>
            <button class="btn btn-primary btn-profile" type="button">
              <%= link_to "Dasboard", admin_work_spaces_path %>
            </button>
          <% else %>
            <% if current_user.work_space.count >= 2 %>
              <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Dasboard</button>

              <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body">
                      <p>Some text in the modal.</p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
            <% else %>
              <button class="btn btn-primary btn-profile" type="button">
                <%= link_to "Dasboard", leader_work_spaces_path %>
              </button>
            <%end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
